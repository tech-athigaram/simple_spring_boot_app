pipeline {
    agent {
        docker {
            image 'maven:3.8.7-openjdk-18-slim'
            args '-v /root/.m2:/root/.m2' // Optional: cache Maven dependencies
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/tech-athigaram/simple_spring_boot_app.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        success {
            echo 'Build successful!'
            emailext subject: "Build ${env.BUILD_STATUS} - ${env.JOB_NAME} #${env.BUILD_NUMBER}", body: "Details: ${env.BUILD_URL}", to: 'tech.athigaram@gmail.com'
        }
        failure {
            echo 'Build failed.'
            mail bcc: '', body: 'Build failed!\n\n${env.BUILD_URL}', cc: 'mazhilnan@gmail.com', from: '', replyTo: '', subject: 'FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}', to: 'tech.athigaram@gmail.com'
        }
    }
}
