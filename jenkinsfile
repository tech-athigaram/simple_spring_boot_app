pipeline {
    agent {
        docker {
            image 'maven:3.8.7-openjdk-18-slim'
            args '-v /root/.m2:/root/.m2' // Optional: cache Maven dependencies
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: '23bcs077_pavishna', url: 'https://github.com/tech-athigaram/simple_spring_boot_app.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        success {
            echo 'Build successful!'
            //emailext subject: "Build Success - ${env.JOB_NAME} #${env.BUILD_NUMBER}", body: "Details: ${env.BUILD_URL}", to: 'tech.athigaram@gmail.com'  
        }
        failure {
            echo 'Build failed.'
            //emailext subject: "Build Failed - ${env.JOB_NAME} #${env.BUILD_NUMBER}", body: "Details: ${env.BUILD_URL}", to: 'tech.athigaram@gmail.com'
        }
    }
}
